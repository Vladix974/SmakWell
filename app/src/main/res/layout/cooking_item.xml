<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgBake"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="25dp"
        android:adjustViewBounds="true"
        android:layout_centerInParent = "true"
        app:shapeAppearanceOverlay="@style/roundimg"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/tvNametypebake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:text="Name_Type_Bake"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="20sp"
         />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:text="@string/scklad"
        android:layout_marginLeft="15dp"
        android:textColor="@color/orange"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/tvCompound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:text="Compund"
        android:layout_marginLeft="15dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:text="@string/Sposib"
        android:layout_marginLeft="15dp"
        android:textColor="@color/orange"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/tvCooking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:text=""
        android:layout_marginLeft="15dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:text="@string/Cinnist"
        android:textColor="@color/orange" />

    <TextView
        android:id="@+id/tvCinnist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:text="cinnict"
        android:layout_marginLeft="15dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        />
</LinearLayout>